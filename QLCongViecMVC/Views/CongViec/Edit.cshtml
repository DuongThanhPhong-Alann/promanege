@model QLCongViecMVC.Models.CongViec
@{
    ViewData["Title"] = "Chỉnh sửa Công việc";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/style/congviec/congviec.css" />
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />
    
    <div class="mb-3">
        <label asp-for="TieuDe" class="form-label"></label>
        <input asp-for="TieuDe" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="LoaiCongViec" class="form-label"></label>
        <select asp-for="LoaiCongViec" class="form-select">
            <option value="CaNhan">Cá Nhân</option>
            <option value="Nhom">Nhóm</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="NguoiTaoID" class="form-label"></label>
        <select asp-for="NguoiTaoID" class="form-select" asp-items="ViewBag.NguoiTaoID"></select>
    </div>

    <div class="mb-3">
        <label asp-for="NhomID" class="form-label"></label>
        <select asp-for="NhomID" class="form-select" asp-items="ViewBag.NhomID">
            <option value="">-- Không thuộc nhóm --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
</form>
