@model QLCongViecMVC.Models.NhomCongViec
@{
    ViewData["Title"] = "Chi tiết nhóm";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/style/nhom/nhom.css" />
}

<div class="card-container">
    <div class="card">
        <div class="card-header">
            Chi tiết nhóm: @Model.TenNhom
        </div>
        <div class="card-body">
            <p><strong>Mục tiêu:</strong> @Model.MucTieu</p>
            <p><strong>Thời gian:</strong> @Model.NgayBatDau?.ToString("dd/MM/yyyy") - @Model.NgayKetThuc?.ToString("dd/MM/yyyy")</p>
            <p><strong>Mô tả:</strong> @Model.MoTa</p>
            <hr />
            <h4>Thành viên đã tham gia</h4>
            @if (Model.ThanhVienNhoms != null && Model.ThanhVienNhoms.Any())
            {
                <ul>
                    @foreach (var tv in Model.ThanhVienNhoms)
                    {
                        <li>@tv.NguoiDung?.TenDangNhap (@tv.NguoiDung?.Email)</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Chưa có thành viên nào.</p>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">← Quay lại</a>
        </div>
    </div>
</div>